{% extends "::base.html.twig" %}
{%  block nav %}
	{% include '::nav.html.twig' %} <!-- Inclusion de la navigation -->

	{% block logo %}
		<a href="{{ path('Simplon_blog_accueil') }}"><div class="logo animated bounceIn">blog</div></a>

		<div class="menu_admin">
			<img class="minifleche" src="{{ asset('images/minifleche.png')}}" alt="">
		</div>

		<div class="interface-admin flex-center">
			<ul class="menu ">
				<li><a href='{{ path('Simplon_blog_edit_profile', {'user': app.user.username }) }}'>Modifier le profil</a></li>

				<li><a href="{{ path('Simplon_blog_liste_users') }}">Gerer utilisateurs</a></li>

				<li><a href='{{ path('Simplon_blog_logout') }}'>Se d√©connecter</a></li>

				<li><a href='{{ path('Simplon_blog_add_article') }}'>Ajouter un article</a></li>
			</ul>
			<p class="close"><i class="fa fa-send" aria-hidden="true"></i>
			</p>
		</div>
		{% if app.user.avatar == "avatar-defaut.png"  %}
			<div class="avatar-defaut">
				<img src=" {{ asset('images/avatars/'~app.user.avatar~'')}}" alt="">
			</div>
		{% else %}
			<div class="avatar">
				<img src=" {{ asset('images/avatars/'~app.user.avatar~'')}}" alt="">
			</div>
		{% endif %}


	{% endblock %}
{% endblock %}
{% block page %}



	<div class="flex-container">
		<div class="flex-item">
			<ul>
				{% for user in users %}
					<li>username : {{ user.username }}</li>
					<li>roles :
						{% for role in user.roles %}
							{{ role }}
						{% endfor %}
					</li>
					<li><a href="{{ path('Simplon_blog_change_role', {'user': user.username }) }}">Changer Role</a></li>
					<li><a href="{{ path('Simplon_blog_remove_user', {'user': user.username }) }}">Supprimer l'utilisateur</a></li><br/>
				{% endfor %}
			</ul>
		</div>

	</div>

{% endblock %}
