{% extends "SimplonBlogBundle:Blog:template.html.twig" %}

{% block body %}

	{% for flash_message in app.session.flashBag.all %}
    	{% for flash in flash_message %}
    		<div class="flash-notice">
        		{{ flash }}
    		</div>
		{% endfor %}
	{% endfor %}

	{% for article in articles %}
		<ul class="articles">
			<li>
				<a href="{{ path('Simplon_blog_view_article',{'id': article.id}) }}"><p class="titre">{{ article.titre }}</p></a>
				<p>{{ article.contenu }}</p>
				<p>{{ article.auteur }}</p>
				<p>Dernière modification le {{ article.date | date('d-m-Y') }} à {{article.date | date('H:i:s') }}</p>

				{% if app.user != null %}
					{% for articleVu in vus %}
						{% if articleVu.article.id == article.id and articleVu.user.id == app.user.id %}
							<p>article déjà lu</p>
						{% endif %}
					{% endfor %}
				{% endif %}

			</li>
		</ul class="articles">
	{% endfor %}
{% endblock %}
