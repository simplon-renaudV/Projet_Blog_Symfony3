{% extends "renaudBlogBundle:Blog:template.html.twig" %}

{% block body %}
	<ul class="articles">
	{% for article in articles %}
		{% if article.publie %} 
			<li>
				<a href="{{ path('renaud_blog_view_article',{'id': article.id}) }}"><p class="titre">{{ article.titre }}</p></a>
				<p>{{ article.contenu }}</p>
				<p>{{ article.auteur }}</p>
				<p>Dernière modification le {{ article.date | date('d-m-Y') }} à {{article.date | date('H:i:s') }}</p>

				{% if app.user != null %}
					{% for articleVu in vus %}
						{% if articleVu.article.id == article.id and articleVu.user.id == app.user.id %}
							<p>article déjà lu</p>
						{% endif %}
					{% endfor %}
				{% endif %}
				
			</li>
		{% endif %}
	{% endfor %}
	</ul class="articles">
{% endblock %}